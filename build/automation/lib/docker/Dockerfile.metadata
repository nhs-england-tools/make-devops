
### METADATA ###################################################################

ARG IMAGE
ARG VERSION
ARG BUILD_ID
ARG BUILD_DATE
ARG BUILD_HASH
ARG BUILD_REPO
LABEL \
    name=$IMAGE \
    version=$VERSION \
    build-id=$BUILD_ID \
    build-date=$BUILD_DATE \
    build-hash=$BUILD_HASH \
    build-repo=$BUILD_REPO
ENV \
    IMAGE_NAME=$IMAGE \
    IMAGE_VERSION=$VERSION \
    BUILD_ID=$BUILD_ID \
    BUILD_DATE=$BUILD_DATE \
    BUILD_HASH=$BUILD_HASH \
    BUILD_REPO=$BUILD_REPO
